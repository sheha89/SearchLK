                        <!--</resource>-->
                    <!--</webResources>-->
                    <!--<attachClasses>false</attachClasses>-->
                    <!--<archiveClasses>true</archiveClasses>-->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>*.*</exclude>
                    </excludes>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>
