                            <!--</includes>-->
                            <!--<filtering>true</filtering>-->
                        <!--</resource>-->
                        <!--<resource>-->
                            <!--<directory>src/main/resources/webapp/css/theme</directory>-->
                            <!--<targetPath>css/theme</targetPath>-->
                            <!--<filtering>false</filtering>-->
                        <!--</resource>-->
                        <!--<resource>-->
                            <!--<directory>src/main/resources/webapp/images</directory>-->
                            <!--<targetPath>images</targetPath>-->
                            <!--<filtering>false</filtering>-->
                        <!--</resource>-->
                        <!--<resource>-->
